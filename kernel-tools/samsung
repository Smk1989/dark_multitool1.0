#!/bin/bash
clear
export root=$(cd $(dirname "$0");pwd)
export multitools=$root/samsung
source ~/dark_multitool1.0/scripts/config
export PATH=$PATH:$HOME/bin
echo "1 - Unpack Kernel source "
echo
echo "2 - Compile zImage(generic)"
read input
case $input in
1)cd ~/dark_multitool1.0/kernel-tools/
  python extractor.py $kerneldir_name
  echo "Please find the unpacked source in your kernel work directory"
  echo "Press enter to continue"
  read enterkey;;
2). ~/dark_multitool1.0/kernel-tools/samsung_buildzimage;;
3)
esac
