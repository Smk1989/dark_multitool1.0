#!/bin/bash
export root=$(cd $(dirname "$0");pwd)
cd $root
echo "***************Hi!!!Welcome to dark's_multitool*********************"
echo "******* Please Enter your choice****"
echo "******* 1-Cyanogenmod tools ********"
echo "******* 2-others *******************"
echo "******* 3-Exit *********************"
read input
     case $input in
           1 ) echo "1-Tools for Compiling cyanogenmod from source"
               echo "2-exit"
               read input1
                    case $input1 in 
                        1 ) echo "1-Install necessary libraries"
                            echo "2-Initialize your repository"
                            echo "3-Exit"
                            read input2
                                 case $input2 in
                                      1 ) /bin/bash ~/cm_tool1.0/scripts/./import_lib.sh #Installing necesary packages
                                          read;;
                                      2 ) mkdir -p ~/bin
                                          echo "----------------------Enter name of your Cyanogenmod work               directory-----------------------(CTRL+C to exit)"
                                          read directory_name
                                          mkdir -p ~/$directory_name
                                          cd ~/$director_name
                                          echo "*********Initializing repo**********"
                                          /bin/bash ~/cm_tool1.0/scripts/./repo_init.sh #Initializing repo
                                          read;;
                                      3 ) exit;;
                                  esac
                                  
                        2 ) exit;;
                        esac
                        
             2 ) exit;;
             3 ) exit;;
        esac
        






